{
  "name": "Tab Manipulator",
  "description": "Sort tabs, manage windows and close tabs the way most editors do.",
  "version": "1.0",
  "author": "Lau Kondrup",
  "homepage_url": "https://github.com/LK28/tab-manipulator",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "notifications"
  ],
  "offline_enabled": true,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2,
  "commands": {
    "reload": {
      "description": "Reloads all selected tabs"
    },
    "sortByAge": {
      "suggested_key": {
        "default": "Shift+Alt+A",
        "windows": "Shift+Alt+A",
        "mac": "Shift+Alt+A"
      },
      "description": "Sort the tabs by age"
    },
    "sortByUrl": {
      "suggested_key": {
        "default": "Shift+Alt+U",
        "windows": "Shift+Alt+U",
        "mac": "Shift+Alt+U"
      },
      "description": "Sort tabs by URL"
    },
    "mergeWindows": {
      "description": "Merge all tabs from all windows"
    },
    "extractDomain": {
      "description": "Extract all tabs matching the current domain into one new window"
    },
    "sortByNumDomain": {
      "description": "Sort tabs by the number of tabs for each domain"
    },
    "splitWindow": {
      "suggested_key": {
        "default": "Shift+Alt+S",
        "windows": "Shift+Alt+S",
        "mac": "Shift+Alt+S"
      },
      "description": "Split window from current tab"
    },
    "closeTabsLeft": {
      "description": "Close all tabs to the left"
    },
    "closeTabsRight": {
      "suggested_key": {
        "default": "Shift+Alt+R",
        "windows": "Shift+Alt+R",
        "mac": "Shift+Alt+R"
      },
      "description": "Close all tabs to the right"
    },
    "closeAllExceptCurrentTab": {
      "description": "Close all except the current tab"
    },
    "duplicateTab": {
      "description": "Duplicate all highlighted tabs"
    },
    "togglePinTab": {
      "description": "Toggle pin highlighted tabs"
    },
    "reverseSort": {
      "description": "Reverse sort all tabs"
    },
    "extractSelectedTabs": {
      "description": "Extracts all highlighted tabs"
    },
    "closeDuplicates": {
      "description": "Close duplicates"
    }
  }
}
